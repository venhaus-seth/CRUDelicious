@{
    ViewData["Title"] = "Add a Dish";
}
@model Dish
<div class="text-center">

    <div class="m-4">
        <h1>Add a new Dish</h1>
    </div>

    <div class="m-4">
        <a asp-action="">Home</a>
        <a asp-action="NewDish">Add a Dish</a>
    </div>

    <form asp-action="AddDish" method="post" asp-controller="Home">
        <div class="m-2">
            <label asp-for="Chef">Chef's Name</label>
            <input asp-for="Chef">
            <span asp-validation-for="Chef"></span>
        </div>

        <div class="m-2">
            <label asp-for="Name">Name of Dish</label>
            <input asp-for="Name">
            <span asp-validation-for="Name"></span>
        </div>

        <div class="m-2">
            <label asp-for="Calories"># of Calories</label>
            <input asp-for="Calories">
            <span asp-validation-for="Calories"></span>
        </div>

        <div class="m-2">
            <label asp-for="Tastiness">Tastiness</label>
            <select asp-for="Tastiness">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <span asp-validation-for="Tastiness"></span>
        </div>

        <div class="m-2 align-middle">
            <label asp-for="Description">Describe your Dish</label>
            <textarea asp-for="Description" cols="25" rows="5"></textarea>
            <span asp-validation-for="Description"></span>
        </div>
        <button type="submit" >Add Dish</button>
    </form>

</div>
